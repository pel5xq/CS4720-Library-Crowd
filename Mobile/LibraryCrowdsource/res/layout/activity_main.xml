            android:text="@string/thornton"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/thorntonCrowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/defaultData" />

        <TextView
            android:id="@+id/thorntonNoise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/defaultData" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonWilsdorf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wilsdorf"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/wilsdorfCrowd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/defaultData" />

        <TextView
            android:id="@+id/wilsdorfNoise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/defaultData" />

    </TableRow>

    <Button
        android:id="@+id/makePostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/makePost" />

    <TableRow
        android:id="@+id/LibraryDatascrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="5dp">

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/BLAH_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:stretchColumns="yes" >

                <TextView
                    android:id="@+id/libraryNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableLayout>
        </ScrollView>

    </TableRow>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exception"
        android:gravity="center" />
    
</TableLayout>

